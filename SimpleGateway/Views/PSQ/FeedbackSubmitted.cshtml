@{
    ViewData["Title"] = "Thank You - Patient Feedback Submitted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow border-success">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-check-circle"></i> Thank You!
                    </h3>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-star text-warning" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h4 class="text-success mb-3">Your Feedback Has Been Submitted</h4>
                    
                    <p class="lead">Thank you for taking the time to provide feedback about your dental care experience.</p>
                    
                    <div class="alert alert-info">
                        <h6><i class="fas fa-shield-alt"></i> Your Privacy is Protected</h6>
                        <p class="mb-0">Your responses are completely <strong>anonymous</strong> and will be used to help improve patient care quality.</p>
                    </div>
                    
                    <div class="mt-4">
                        <h6>What happens next?</h6>
                        <ul class="list-unstyled">
                            <li><i class="fas fa-chart-line text-primary"></i> Your feedback will be included in quality improvement reports</li>
                            <li><i class="fas fa-user-md text-info"></i> The dentist will review aggregated patient feedback</li>
                            <li><i class="fas fa-heart text-danger"></i> Your input helps improve care for future patients</li>
                        </ul>
                    </div>
                    
                    <div class="mt-4">
                        <p class="text-muted">You may now close this window.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
