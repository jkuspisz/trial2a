                            <table class="table table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 15%;">From (MM/YYYY):</th>
                                        <th style="width: 15%;">To (MM/YYYY):</th>
                                        <th style="width: 25%;">Job title/position:</th>
                                        <th style="width: 30%;">Address:</th>
                                        <th style="width: 15%;">Patient types:</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><input asp-for="MostRecentJobFromDate" class="form-control" placeholder="MM/YYYY" /></td>
                                        <td><input asp-for="MostRecentJobToDate" class="form-control" placeholder="MM/YYYY" /></td>
