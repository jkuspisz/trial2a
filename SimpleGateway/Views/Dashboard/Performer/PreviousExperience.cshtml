@model SimpleGateway.Models.PrevExpModel
@{
    ViewData["Title"] = "Previous Experience";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2>Previous Experience - @ViewBag.PerformerName</h2>
            @if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                    @if (TempData["TotalRecords"] != null)
                    {
                        <br><strong>Total records in PostgreSQL database:</strong> @TempData["TotalRecords"]
                    }
                </div>
            }
            
            @if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <ul class="list-group">
                <li class="list-group-item @(ViewBag.ActiveSection == "Dashboard" ? "active" : "")">
                    <a href="@Url.Action("Index", "Dashboard")" class="text-decoration-none">Dashboard</a>
                </li>
                <li class="list-group-item @(ViewBag.ActiveSection == "PerformerDetails" ? "active" : "")">
                    <a href="@Url.Action("PerformerDetails", "Dashboard")" class="text-decoration-none">Performer Details</a>
                </li>
                <li class="list-group-item @(ViewBag.ActiveSection == "PreviousExperience" ? "active" : "")">
                    <a href="@Url.Action("PreviousExperienceForm", "Dashboard")" class="text-decoration-none">Previous Experience</a>
                </li>
                <li class="list-group-item @(ViewBag.ActiveSection == "TestPractice" ? "active" : "")">
                    <a href="@Url.Action("TestPracticeForm", "Dashboard")" class="text-decoration-none">Test Practice</a>
                </li>
                <li class="list-group-item @(ViewBag.ActiveSection == "FileUploads" ? "active" : "")">
                    <a href="@Url.Action("FileUploads", "Dashboard")" class="text-decoration-none">File Uploads</a>
                </li>
                <li class="list-group-item @(ViewBag.ActiveSection == "Assignments" ? "active" : "")">
                    <a href="@Url.Action("Assignments", "Dashboard")" class="text-decoration-none">Assignments</a>
                </li>
            </ul>
        </div>
        <div class="col-9">
            <form asp-action="PreviousExperienceForm" method="post">
                <div class="card">
                    <div class="card-header">
                        <h5>Previous Experience Information</h5>
                    </div>
                    <div class="card-body">
                        
                        <div class="mb-3">
                            <label asp-for="QualificationCountry" class="form-label"></label>
                            <input asp-for="QualificationCountry" class="form-control" />
                            <span asp-validation-for="QualificationCountry" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="QualificationUniversity" class="form-label"></label>
                            <input asp-for="QualificationUniversity" class="form-control" />
                            <span asp-validation-for="QualificationUniversity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EmploymentHistory" class="form-label"></label>
                            <textarea asp-for="EmploymentHistory" class="form-control" rows="5" placeholder="Please list your previous dental positions, including practice names, roles, and dates"></textarea>
                            <span asp-validation-for="EmploymentHistory" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save Previous Experience</button>
                            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
