@{
    ViewBag.Title = "Uploads - " + ViewBag.PerformerName;
    Layout = "_Layout";
}

<div class="row">
    <div class="col-3">
        <ul class="list-group">
            <li class="list-group-item @(ViewBag.ActiveSection == "Dashboard" ? "active" : "")">
                <a href="/Dashboard/ViewPerformerDashboard?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "Dashboard" ? "color: white;" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard Overview
                </a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "PerformerDetails" ? "active" : "")">
                <a href="/Dashboard/PerformerDetails?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "PerformerDetails" ? "color: white;" : "")">Performer Details</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "TestPractice" ? "active" : "")">
                <a href="/Dashboard/TestPractice?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "TestPractice" ? "color: white;" : "")">Supporting Dentist Declaration</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "TestPractice2" ? "active" : "")">
                <a href="/Dashboard/TestPractice2?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "TestPractice2" ? "color: white;" : "")">Previous Experience</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "Uploads" ? "active" : "")">
                <a href="/Dashboard/Uploads?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "Uploads" ? "color: white;" : "")">Uploads</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "StructuredConversation" ? "active" : "")">
                <a href="/Dashboard/StructuredConversation?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "StructuredConversation" ? "color: white;" : "")">Structured Conversation</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "AgreementTerms" ? "active" : "")">
                <a href="/Dashboard/AgreementTerms?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "AgreementTerms" ? "color: white;" : "")">Agreement Terms</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "WorkBasedAssessments" ? "active" : "")">
                <a href="/Dashboard/WorkBasedAssessments?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "WorkBasedAssessments" ? "color: white;" : "")">Work Based Assessments</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "CPD" ? "active" : "")">
                <a href="/Dashboard/CPD?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "CPD" ? "color: white;" : "")">CPD</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "MSF" ? "active" : "")">
                <a href="@Url.Action("Index", "MSF")" style="@(ViewBag.ActiveSection == "MSF" ? "color: white;" : "")">
                    <i class="fas fa-comments"></i> MSF Assessment
                </a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "PSQ" ? "active" : "")">
                <a href="/Dashboard/PSQ?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "PSQ" ? "color: white;" : "")">PSQ</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "ClinicalNoteAudit" ? "active" : "")">
                <a href="/Dashboard/ClinicalNoteAudit?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "ClinicalNoteAudit" ? "color: white;" : "")">Clinical Note Audit</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "HelpGuidance" ? "active" : "")">
                <a href="/Dashboard/HelpGuidance?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "HelpGuidance" ? "color: white;" : "")">Help & Guidance</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "FinalSignOff" ? "active" : "")">
                <a href="/Dashboard/FinalSignOff?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "FinalSignOff" ? "color: white;" : "")">Final Sign off</a>
            </li>
            @if (ViewBag.IsOwnDashboard == true)
            {
                <li class="list-group-item"><a href="/Account/Logout">Logout</a></li>
            }
            else
            {
                <li class="list-group-item"><a href="/Dashboard/Index">Back to List</a></li>
            }
        </ul>
    </div>
    
    <div class="col-9">
        <h2>File Uploads - @ViewBag.PerformerName</h2>
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        <div class="card mb-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Required Upload: Indemnity/Insurance Evidence
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i> <strong>Required:</strong> You must upload your Indemnity/Insurance evidence.
                </div>
                
                @if (ViewBag.CanEdit == true)
                {
                    <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="performerUsername" value="@ViewBag.PerformerUsername" />
                        <input type="hidden" name="category" value="IndemnityEvidence" />
                        <input type="hidden" name="isRequired" value="true" />
                        
                        <div class="mb-3">
                            <label class="form-label"><strong>Upload Indemnity/Insurance Evidence:</strong></label>
                            <input type="file" class="form-control" name="uploadFile" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" required />
                            <input type="hidden" name="description" value="Indemnity/Insurance Evidence" />
                            <small class="form-text text-muted">Accepted formats: PDF, Word documents, Images (Max 10MB)</small>
                        </div>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-upload"></i> Upload Required Document
                        </button>
                    </form>
                }
                
                @* Display existing indemnity files *@
                @if (ViewBag.IndemnityFiles != null)
                {
                    var indemnityFiles = ViewBag.IndemnityFiles as List<SimpleGateway.Models.FileUploadEntry>;
                    if (indemnityFiles != null && indemnityFiles.Any())
                    {
                        <hr />
                        <h6>Uploaded Indemnity Documents:</h6>
                        @foreach (var file in indemnityFiles)
                        {
                            <div class="d-flex justify-content-between align-items-center border rounded p-2 mb-2">
                                <div>
                                    <i class="fas fa-file"></i> <strong>@file.FileName</strong>
                                    <small class="text-muted">(@(file.FileSize / 1024)KB - Uploaded @file.UploadedAt.ToString("MMM dd, yyyy"))</small>
                                </div>
                                <div>
                                    <a href="/Dashboard/DownloadFile/@file.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                    @if (ViewBag.CanEdit == true)
                                    {
                                        <a href="/Dashboard/DeleteFile/@file.Id" class="btn btn-sm btn-outline-danger ms-1" 
                                           onclick="return confirm('Are you sure you want to delete this file?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    }
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h4 class="mb-0">Additional File Uploads</h4>
                <small class="text-muted">Upload any additional supporting documents</small>
            </div>
            <div class="alert alert-danger mx-3 mt-3 mb-0">
                <i class="fas fa-exclamation-triangle"></i> 
                <strong>IMPORTANT:</strong> Any upload must not contain patient identifying information or photography.
            </div>
            <div class="card-body">
                @if (ViewBag.CanEdit == true)
                {
                    <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="performerUsername" value="@ViewBag.PerformerUsername" />
                        <input type="hidden" name="category" value="Additional" />
                        <input type="hidden" name="isRequired" value="false" />
                        
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label class="form-label">Description:</label>
                                <input type="text" class="form-control" name="description" placeholder="Enter file description..." required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Choose File:</label>
                                <input type="file" class="form-control" name="uploadFile" required />
                                <small class="form-text text-muted">Max 10MB</small>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">&nbsp;</label><br>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Add Upload
                                </button>
                            </div>
                        </div>
                    </form>
                    <hr>
                }

                @* Display additional uploaded files *@
                @if (ViewBag.AdditionalFiles != null)
                {
                    var additionalFiles = ViewBag.AdditionalFiles as List<SimpleGateway.Models.FileUploadEntry>;
                    if (additionalFiles != null && additionalFiles.Any())
                    {
                        <h6>Additional Uploaded Files:</h6>
                        @foreach (var file in additionalFiles)
                        {
                            <div class="d-flex justify-content-between align-items-center border rounded p-3 mb-2">
                                <div>
                                    <i class="fas fa-file"></i> <strong>@file.Description</strong><br>
                                    <small class="text-muted">File: @file.FileName (@(file.FileSize / 1024)KB - Uploaded @file.UploadedAt.ToString("MMM dd, yyyy"))</small>
                                </div>
                                <div>
                                    <a href="/Dashboard/DownloadFile/@file.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                    @if (ViewBag.CanEdit == true)
                                    {
                                        <a href="/Dashboard/DeleteFile/@file.Id" class="btn btn-sm btn-outline-danger ms-1" 
                                           onclick="return confirm('Are you sure you want to delete this file?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted">
                            <i class="fas fa-folder-open fa-3x mb-3"></i>
                            <p>No additional files uploaded yet.</p>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center text-muted">
                        <i class="fas fa-folder-open fa-3x mb-3"></i>
                        <p>No additional files uploaded yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
            </div>
        </div>
    </div>
</div>
