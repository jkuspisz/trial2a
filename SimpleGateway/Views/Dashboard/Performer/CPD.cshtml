        <!-- Medical Emergencies CPD -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-heartbeat"></i> Medical Emergencies
                </h4>
            </div>
            <div class="card-body">
                <p class="text-muted">Upload certificates or evidence of Medical Emergencies training and CPD.</p>
                
                @if (ViewBag.CanEdit == true)
                {
                    <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
                        <input type="hidden" name="performerUsername" value="@ViewBag.PerformerUsername" />
                        <input type="hidden" name="category" value="CPD_MedicalEmergencies" />
                        <input type="hidden" name="isRequired" value="false" />
                        
                        <div class="mb-3">
                            <label class="form-label"><strong>Upload Medical Emergencies CPD:</strong></label>
                            <input type="file" class="form-control" name="uploadFile" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" required />
                            <input type="hidden" name="description" value="Medical Emergencies CPD" />
                            <small class="form-text text-muted">Accepted formats: PDF, Word documents, Images (Max 10MB)</small>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload"></i> Upload CPD Evidence
                        </button>
                    </form>
                }
                
                @* Display existing Medical Emergencies files *@
                @if (ViewBag.MedicalEmergenciesFiles != null)
                {
                    var medicalEmergenciesFiles = ViewBag.MedicalEmergenciesFiles as List<SimpleGateway.Models.FileUploadEntry>;
                    if (medicalEmergenciesFiles != null && medicalEmergenciesFiles.Any())
                    {
                        <hr />
                        <h6>Uploaded Medical Emergencies CPD:</h6>
                        @foreach (var file in medicalEmergenciesFiles)
                        {
                            <div class="d-flex justify-content-between align-items-center border rounded p-2 mb-2">
                                <div>
                                    <i class="fas fa-file"></i> <strong>@file.FileName</strong>
                                    <small class="text-muted">(@(file.FileSize / 1024)KB - Uploaded @file.UploadedAt.ToString("MMM dd, yyyy"))</small>
                                </div>
                                <div>
                                    <a href="/Dashboard/DownloadFile/@file.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-download"></i> Download
                                    </a>
                                    @if (ViewBag.CanEdit == true)
                                    {
                                        <a href="/Dashboard/DeleteFile/@file.Id" class="btn btn-sm btn-outline-danger ms-1" 
                                           onclick="return confirm('Are you sure you want to delete this file?')">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    }
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>

