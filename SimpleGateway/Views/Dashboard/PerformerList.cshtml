@{
    ViewBag.Title = "Performer Management";
}

@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-3">
        <ul class="list-group">
            <li class="list-group-item active"><a href="#" style="color: white;">Performer List</a></li>
            <li class="list-group-item"><a href="#">Reports</a></li>
            <li class="list-group-item"><a href="#">Settings</a></li>
            <li class="list-group-item"><a href="/Account/Logout">Logout</a></li>
        </ul>
    </div>
    <div class="col-9">
        <h2>Performer Management</h2>
        <p>Logged in as: <b>@ViewBag.DisplayName</b> (Role: @ViewBag.Role)</p>
        <hr />
        
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Active Performers</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Performer Name</th>
                                <th>Status</th>
                                <th>Last Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Performer One</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>2 hours ago</td>
                                <td>
                                    <button class="btn btn-sm btn-primary">View Details</button>
                                    <button class="btn btn-sm btn-secondary">View Log</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Jane Smith</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                                <td>1 day ago</td>
                                <td>
                                    <button class="btn btn-sm btn-primary">View Details</button>
                                    <button class="btn btn-sm btn-secondary">View Log</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Mike Johnson</td>
                                <td><span class="badge bg-success">Active</span></td>
                                <td>30 minutes ago</td>
                                <td>
                                    <button class="btn btn-sm btn-primary">View Details</button>
                                    <button class="btn btn-sm btn-secondary">View Log</button>
                                </td>
                            </tr>
                            <tr>
                                <td>Sarah Wilson</td>
                                <td><span class="badge bg-danger">Inactive</span></td>
                                <td>1 week ago</td>
                                <td>
                                    <button class="btn btn-sm btn-primary">View Details</button>
                                    <button class="btn btn-sm btn-secondary">View Log</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="mt-3">
            <button class="btn btn-success">Add New Performer</button>
            <button class="btn btn-info">Export Report</button>
        </div>
    </div>
</div>
