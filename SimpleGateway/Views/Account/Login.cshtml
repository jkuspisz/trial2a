@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5" style="max-width:350px;">
        <h3 class="mb-3">Login</h3>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }
        <form method="post">
            <div class="mb-3">
                <label>Username</label>
                <input name="username" class="form-control" autofocus />
            </div>
            <div class="mb-3">
                <label>Password</label>
                <input name="password" type="password" class="form-control" />
            </div>
            <button class="btn btn-primary w-100">Login</button>
        </form>
        <hr />
        <div>
            <small>
                Demo users:<br />
                <strong>Performers:</strong><br />
                performer1 / password123 (John Smith)<br />
                performer2 / password123 (Jane Johnson)<br />
                performer3 / password123 (Mike Wilson)<br />
                <strong>Staff:</strong><br />
                supervisor1 / password123 (Prof. Robert Brown)<br />
                advisor1 / password123 (Dr. Sarah Davis)<br />
                admin1 / password123 (Admin User)<br />
                superuser / password123 (Super User)
            </small>
        </div>
    </div>
</body>
</html>
