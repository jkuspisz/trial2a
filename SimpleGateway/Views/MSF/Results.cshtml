@model SimpleGateway.Models.MSFResultsDto
@{
    ViewData["Title"] = "MSF Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-3">
        <ul class="list-group">
            <li class="list-group-item">
                <a href="/Dashboard/ViewPerformerDashboard?performerUsername=@(User.Identity?.Name ?? "")">
                    <i class="bi bi-speedometer2"></i> Dashboard Overview
                </a>
            </li>
            <li class="list-group-item">
                <a href="/Dashboard/PerformerDetails?performerUsername=@(User.Identity?.Name ?? "")">Performer Details</a>
            </li>
            <li class="list-group-item">
                <a href="/Dashboard/TestPractice?performerUsername=@(User.Identity?.Name ?? "")">Test Practice</a>
            </li>
            <li class="list-group-item">
                <a href="/Dashboard/TestPractice2?performerUsername=@(User.Identity?.Name ?? "")">Test Practice 2</a>
            </li>
            <li class="list-group-item">
                <a href="/Dashboard/Uploads?performerUsername=@(User.Identity?.Name ?? "")">Uploads</a>
            </li>
            <li class="list-group-item active">
                <a href="@Url.Action("Index", "MSF")" style="color: white;">
                    <i class="fas fa-comments"></i> MSF Assessment
                </a>
            </li>
            <li class="list-group-item">
                <a href="/Dashboard/StructuredConversation?performerUsername=@(User.Identity?.Name ?? "")">Structured Conversation</a>
            </li>
            <li class="list-group-item">
                <a href="/Dashboard/AgreementTerms?performerUsername=@(User.Identity?.Name ?? "")">Agreement Terms</a>
            </li>
            <li class="list-group-item">
                <a href="/Dashboard/WorkBasedAssessment?performerUsername=@(User.Identity?.Name ?? "")">Work Based Assessment</a>
            </li>
            <li class="list-group-item">
                <a href="/Dashboard/CPD?performerUsername=@(User.Identity?.Name ?? "")">CPD</a>
            </li>
        </ul>
    </div>
    <div class="col-9">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>MSF Results
                    </h4>
                    <a href="@Url.Action("Index", "MSF")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to MSF Dashboard
                    </a>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-info">
                            @ViewBag.Message
                        </div>
                    }
                    else if (Model != null && Model.TotalResponses > 0)
                    {
                        <!-- Summary Statistics -->
                        <div class="row mb-4">
                            <div class="col-sm-6">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h3>@Model.TotalResponses</h3>
                                        <p class="mb-0">Total Responses</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h3>@Model.QuestionAverages.Count</h3>
                                        <p class="mb-0">Questions Assessed</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Response Summary -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Response Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Respondent Role</th>
                                                <th>Submitted At</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var response in Model.ResponseSummary)
                                            {
                                                <tr>
                                                    <td>@response.RespondentRole</td>
                                                    <td>@response.SubmittedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Question Averages -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Average Ratings by Question</h5>
                                <small class="text-muted">Scale: 1=Working towards, 2=Meets, 3=Exceeds, 4=Not observed</small>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var kvp in Model.QuestionAverages.OrderBy(x => x.Key))
                                    {
                                        var rating = kvp.Value;
                                        var colorClass = rating switch {
                                            >= 2.5 => "success",
                                            >= 2.0 => "warning",
                                            _ => "danger"
                                        };
                                        
                                        <div class="col-md-6 mb-3">
                                            <div class="card border-@colorClass">
                                                <div class="card-body">
                                                    <h6 class="card-title">@kvp.Key</h6>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="text-@colorClass h5 mb-0">@rating.ToString("F2")</span>
                                                        <div class="progress flex-fill ms-3" style="height: 20px;">
                                                            <div class="progress-bar bg-@colorClass" role="progressbar" 
                                                                 style="width: @((rating / 4.0) * 100)%" 
                                                                 aria-valuenow="@rating" aria-valuemin="0" aria-valuemax="4">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Comments Section -->
                        @if (Model.AllComments.Any())
                        {
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">Feedback Comments</h5>
                                </div>
                                <div class="card-body">
                                    @foreach (var comment in Model.AllComments)
                                    {
                                        <div class="alert alert-light">
                                            <i class="fas fa-quote-left text-muted me-2"></i>@comment
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Performance Categories -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Performance Categories</h5>
                            </div>
                            <div class="card-body">
                                @{
                                    var patientCareQuestions = Model.QuestionAverages
                                        .Where(q => new[] { "Patient Care Quality", "Communication Skills", "Communication & Empathy", "History Taking", "Consultation Management", "Cultural Sensitivity" }
                                            .Any(cat => q.Key.Contains(cat, StringComparison.OrdinalIgnoreCase)))
                                        .ToList();
                                    
                                    var professionalQuestions = Model.QuestionAverages
                                        .Where(q => new[] { "Ethical Professionalism", "Professional Development", "Technical Competence", "Decision Making", "Documentation" }
                                            .Any(cat => q.Key.Contains(cat, StringComparison.OrdinalIgnoreCase)))
                                        .ToList();
                                    
                                    var teamQuestions = Model.QuestionAverages
                                        .Where(q => new[] { "Team Collaboration", "Team Support", "Leadership Skills", "Quality Improvement", "Health & Safety Awareness", "Continuous Improvement" }
                                            .Any(cat => q.Key.Contains(cat, StringComparison.OrdinalIgnoreCase)))
                                        .ToList();
                                }

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="card border-primary">
                                            <div class="card-header bg-primary text-white">
                                                <h6 class="mb-0">Patient Care & Communication</h6>
                                            </div>
                                            <div class="card-body">
                                                @if (patientCareQuestions.Any())
                                                {
                                                    var avg = patientCareQuestions.Average(q => q.Value);
                                                    <h4 class="text-primary">@avg.ToString("F2")</h4>
                                                    <small class="text-muted">Average across @patientCareQuestions.Count questions</small>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">No responses</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card border-success">
                                            <div class="card-header bg-success text-white">
                                                <h6 class="mb-0">Professional Integrity & Development</h6>
                                            </div>
                                            <div class="card-body">
                                                @if (professionalQuestions.Any())
                                                {
                                                    var avg = professionalQuestions.Average(q => q.Value);
                                                    <h4 class="text-success">@avg.ToString("F2")</h4>
                                                    <small class="text-muted">Average across @professionalQuestions.Count questions</small>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">No responses</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card border-info">
                                            <div class="card-header bg-info text-white">
                                                <h6 class="mb-0">Team Working & Quality Improvement</h6>
                                            </div>
                                            <div class="card-body">
                                                @if (teamQuestions.Any())
                                                {
                                                    var avg = teamQuestions.Average(q => q.Value);
                                                    <h4 class="text-info">@avg.ToString("F2")</h4>
                                                    <small class="text-muted">Average across @teamQuestions.Count questions</small>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">No responses</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
