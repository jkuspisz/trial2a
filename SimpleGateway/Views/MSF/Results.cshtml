@model SimpleGateway.Models.MSFResultsDto
@{
    ViewData["Title"] = "MSF Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var performerUsername = Model?.PerformerUsername ?? ViewBag.PerformerUsername ?? User.Identity?.Name ?? "";
}

<div class="row">
    <div class="col-3">
        <ul class="list-group">
            <li class="list-group-item @(ViewBag.ActiveSection == "Dashboard" ? "active" : "")">
                <a href="/Dashboard/ViewPerformerDashboard?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "Dashboard" ? "color: white;" : "")">
                    <i class="bi bi-speedometer2"></i> Dashboard Overview
                </a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "PerformerDetails" ? "active" : "")">
                <a href="/Dashboard/PerformerDetails?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "PerformerDetails" ? "color: white;" : "")">Performer Details</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "TestPractice" ? "active" : "")">
                <a href="/Dashboard/TestPractice?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "TestPractice" ? "color: white;" : "")">Test Practice</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "TestPractice2" ? "active" : "")">
                <a href="/Dashboard/TestPractice2?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "TestPractice2" ? "color: white;" : "")">Test Practice 2</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "Uploads" ? "active" : "")">
                <a href="/Dashboard/Uploads?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "Uploads" ? "color: white;" : "")">Uploads</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "StructuredConversation" ? "active" : "")">
                <a href="/Dashboard/StructuredConversation?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "StructuredConversation" ? "color: white;" : "")">Structured Conversation</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "AgreementTerms" ? "active" : "")">
                <a href="/Dashboard/AgreementTerms?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "AgreementTerms" ? "color: white;" : "")">Agreement Terms</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "WorkBasedAssessments" ? "active" : "")">
                <a href="/Dashboard/WorkBasedAssessments?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "WorkBasedAssessments" ? "color: white;" : "")">Work Based Assessments</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "CPD" ? "active" : "")">
                <a href="/Dashboard/CPD?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "CPD" ? "color: white;" : "")">CPD</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "MSF" ? "active" : "")">
                <a href="@Url.Action("Index", "MSF", new { performerUsername = ViewBag.PerformerUsername })" style="@(ViewBag.ActiveSection == "MSF" ? "color: white;" : "")">
                    <i class="fas fa-comments"></i> MSF Assessment
                </a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "PSQ" ? "active" : "")">
                <a href="/Dashboard/PSQ?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "PSQ" ? "color: white;" : "")">PSQ</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "ClinicalNoteAudit" ? "active" : "")">
                <a href="/Dashboard/ClinicalNoteAudit?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "ClinicalNoteAudit" ? "color: white;" : "")">Clinical Note Audit</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "HelpGuidance" ? "active" : "")">
                <a href="/Dashboard/HelpGuidance?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "HelpGuidance" ? "color: white;" : "")">Help & Guidance</a>
            </li>
            <li class="list-group-item @(ViewBag.ActiveSection == "FinalSignOff" ? "active" : "")">
                <a href="/Dashboard/FinalSignOff?performerUsername=@ViewBag.PerformerUsername" style="@(ViewBag.ActiveSection == "FinalSignOff" ? "color: white;" : "")">Final Sign off</a>
            </li>
        </ul>
    </div>
    <div class="col-9">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>MSF Results
                    </h4>
                    <a href="@Url.Action("Index", "MSF", new { performerUsername = performerUsername })" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to MSF Dashboard
                    </a>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-info">
                            @ViewBag.Message
                        </div>
                    }
                    else if (Model != null && Model.TotalResponses > 0)
                    {
                        <!-- Summary Statistics -->
                        <div class="row mb-4">
                            <div class="col-sm-6">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h3>@Model.TotalResponses</h3>
                                        <p class="mb-0">Total Responses</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h3>@Model.QuestionAverages.Count</h3>
                                        <p class="mb-0">Questions Assessed</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Response Summary -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Response Summary</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Submitted At</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var response in Model.ResponseSummary)
                                            {
                                                <tr>
                                                    <td>@response.SubmittedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Question Averages -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Average Ratings by Question</h5>
                                <small class="text-muted">Performance Scale: 1=Working towards, 2=Meets, 3=Exceeds (Not Observed responses excluded from averages)</small>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var kvp in Model.QuestionAverages.OrderBy(x => x.Key))
                                    {
                                        var rating = kvp.Value;
                                        var colorClass = rating switch {
                                            >= 2.5 => "success",    // Exceeds territory (2.5-3.0)
                                            >= 1.8 => "warning",    // Meets territory (1.8-2.5)  
                                            _ => "danger"           // Working towards (1.0-1.8)
                                        };
                                        
                                        var performanceLabel = rating switch {
                                            >= 2.5 => "Exceeds",
                                            >= 1.8 => "Meets", 
                                            _ => "Working Towards"
                                        };
                                        
                                        <div class="col-md-6 mb-3">
                                            <div class="card border-@colorClass">
                                                <div class="card-body">
                                                    <h6 class="card-title">@kvp.Key</h6>
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <span class="text-@colorClass h5 mb-0">@rating.ToString("F2")</span>
                                                        <small class="text-muted">@performanceLabel</small>
                                                    </div>
                                                    <div class="progress" style="height: 20px;">
                                                        <div class="progress-bar bg-@colorClass" role="progressbar" 
                                                             style="width: @(((rating - 1) / 2.0) * 100)%" 
                                                             aria-valuenow="@rating" aria-valuemin="1" aria-valuemax="3">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Comments Section -->
                        @if (Model.AllComments.Any())
                        {
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0">Feedback Comments</h5>
                                </div>
                                <div class="card-body">
                                    @foreach (var comment in Model.AllComments)
                                    {
                                        <div class="alert alert-light">
                                            <i class="fas fa-quote-left text-muted me-2"></i>@comment
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Performance Categories -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0">Performance Categories</h5>
                            </div>
                            <div class="card-body">
                                @{
                                    var patientCareQuestions = Model.QuestionAverages
                                        .Where(q => new[] { "Patient Care Quality", "Communication Skills", "Communication & Empathy", "History Taking", "Consultation Management", "Cultural Sensitivity" }
                                            .Any(cat => q.Key.Contains(cat, StringComparison.OrdinalIgnoreCase)))
                                        .ToList();
                                    
                                    var professionalQuestions = Model.QuestionAverages
                                        .Where(q => new[] { "Ethical Professionalism", "Professional Development", "Technical Competence", "Decision Making", "Documentation" }
                                            .Any(cat => q.Key.Contains(cat, StringComparison.OrdinalIgnoreCase)))
                                        .ToList();
                                    
                                    var teamQuestions = Model.QuestionAverages
                                        .Where(q => new[] { "Team Collaboration", "Team Support", "Leadership Skills", "Quality Improvement", "Health & Safety Awareness", "Continuous Improvement" }
                                            .Any(cat => q.Key.Contains(cat, StringComparison.OrdinalIgnoreCase)))
                                        .ToList();
                                }

                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="card border-primary">
                                            <div class="card-header bg-primary text-white">
                                                <h6 class="mb-0">Patient Care & Communication</h6>
                                            </div>
                                            <div class="card-body">
                                                @if (patientCareQuestions.Any())
                                                {
                                                    var avg = patientCareQuestions.Average(q => q.Value);
                                                    <h4 class="text-primary">@avg.ToString("F2")</h4>
                                                    <small class="text-muted">Average across @patientCareQuestions.Count questions</small>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">No responses</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card border-success">
                                            <div class="card-header bg-success text-white">
                                                <h6 class="mb-0">Professional Integrity & Development</h6>
                                            </div>
                                            <div class="card-body">
                                                @if (professionalQuestions.Any())
                                                {
                                                    var avg = professionalQuestions.Average(q => q.Value);
                                                    <h4 class="text-success">@avg.ToString("F2")</h4>
                                                    <small class="text-muted">Average across @professionalQuestions.Count questions</small>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">No responses</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="card border-info">
                                            <div class="card-header bg-info text-white">
                                                <h6 class="mb-0">Team Working & Quality Improvement</h6>
                                            </div>
                                            <div class="card-body">
                                                @if (teamQuestions.Any())
                                                {
                                                    var avg = teamQuestions.Average(q => q.Value);
                                                    <h4 class="text-info">@avg.ToString("F2")</h4>
                                                    <small class="text-muted">Average across @teamQuestions.Count questions</small>
                                                }
                                                else
                                                {
                                                    <p class="text-muted">No responses</p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
