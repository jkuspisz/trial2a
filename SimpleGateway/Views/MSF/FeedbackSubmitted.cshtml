@{
    ViewData["Title"] = "Feedback Submitted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="text-success mb-3">Thank You!</h3>
                    <p class="lead">Your feedback has been submitted successfully.</p>
                    <p class="text-muted">
                        Your anonymous feedback will help improve professional development and patient care.
                    </p>
                    <hr>
                    <p class="small text-muted">
                        You can safely close this page. Your responses have been recorded anonymously.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
